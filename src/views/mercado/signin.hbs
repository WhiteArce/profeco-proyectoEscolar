<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <div class="text-center mb-4">
                    <h1 class="h3 mb-3 font-weight-normal">Inicia sesión</h1>
                </div>
            </div>
            <div class="card-body">
                <img src="/img/logo.png" class="rounded-circle mx-auto d-block m-4 logo">
                <form action="/market/signin" method="POST">
                    <div class="form-group">
                        <input type="email" name="correo" class="form-control" placeholder="Ingrese correo" required
                            autofocus>
                    </div>

                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="Ingrese contraseña"
                            required>
                    </div>

                    <div class="form-group">
                        <button  type="submit" class="btn btn-primary btn-lg btn-block">Iniciar sesion</button>
                        <a href="/market/signup">No tienes cuenta? registrate aqui. </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>